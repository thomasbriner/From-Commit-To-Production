pipeline {
	agent { 
		node {
      		label 'jenkins-slave1.yvu.ch'
    	}
	}
	stages {
		stage('Build') {
			steps {
				sh 'echo Build'
				sh 'cd Gadgeothek; ./gradlew build'
			}
		}

		stage('End2End Tests') {
		    steps {
		        sh 'echo End2End Tests'
		    }
		}

		stage('Package') {
		    steps {
		        sh 'echo Package'
		    }
		}
	}
	post {
	    success {
    	    archiveArtifacts '**/outputs/apk/*.apk'
	    }
	}
}
