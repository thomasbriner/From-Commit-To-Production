        <activity
            android:name=".StepNewsletterActivity"
            android:label="@string/title_activity_step_newsletter" >
        </activity>
        <activity
            android:name=".StepSubscribedActivity"
            android:label="@string/title_activity_step_thanks" >
        </activity>
        <activity
            android:name=".StepDoneActivity"
            android:label="@string/title_activity_step_done" >
        </activity>
    </application>

</manifest>
